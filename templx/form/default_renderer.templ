// Select renders a select dropdown field using Bulma CSS
templ Select(fieldCtx FieldContext) {
	<div>
		if fieldCtx.Label != "" {
			<label for={ fieldCtx.Name }>
				{ fieldCtx.Label }
				if fieldCtx.Required {
					<span>*</span>
				}
			</label>
		}
		<select
			name={ fieldCtx.Name }
			id={ fieldCtx.Name }
			class={ templ.KV("is-danger", fieldCtx.Error != "") }
			if fieldCtx.Required {
				required
			}
			{ templ.Attributes(fieldCtx.Attributes)... }
		>
			if fieldCtx.Placeholder != "" {
				<option value="">{ fieldCtx.Placeholder }</option>
			}
			{{ options := GetFieldOption(fieldCtx, OptSelectOptions, []SelectOption{}) }}
			for _, option := range options {
				<option
					value={ option.Value }
					if option.Value == fieldCtx.Value {
						selected
					}
				>{ option.Label }</option>
			}
		</select>
		if fieldCtx.Error != "" {
			<p>{ fieldCtx.Error }</p>
		} else {
			<p>{ fieldCtx.Description }</p>
		}
	</div>
}

// FormWrapper renders a complete form
templ FormWrapper(form *Form, action templ.SafeURL, method string) {
	<div>
		<form
			action={ action }
			method={ method }
			if HasFile(form.Fields) {
				enctype="multipart/form-data"
			} else {
				enctype="multipart/application/x-www-form-urlencoded"
			}
		>
			for _, fieldName := range form.GetFieldNames() {
				{{ fieldComponent, _ := form.RenderField(fieldName) }}
				@fieldComponent
			}
			{ children... }
		</form>
	</div>
}
